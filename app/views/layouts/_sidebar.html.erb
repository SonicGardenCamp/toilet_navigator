<div class="col-3 scrollable-sidebar">
  <h1 class='mt-2 text-center'>トイレナビ</h1>

  <ul class="nav nav-tabs mt-3" id="myTabs">
    <li class="nav-item">
      <a class="nav-link active" id="tab1-tab" data-bs-toggle="tab" href="#tab1">経路案内</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="tab2-tab" data-bs-toggle="tab" href="#tab2">各リンク先</a>
    </li>
  </ul>
  
  <div class="tab-content mt-3 ms-2">
    <div class="tab-pane active" id="tab1">
      <div id="routeDetails" class='mb-2'></div>
    </div>
    <div class="tab-pane" id="tab2">
      <% if user_signed_in? %>
        <ul class='p-4 ms-4'>
          <li><%= link_to 'トイレの場所登録', new_toilet_place_path, class: "mb-2"%></li>
          <li><%= link_to 'トイレの一覧画面', toilet_places_path, class: "mb-2"%></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "mb-2"%></li>
        </ul>
      <% else %>
        <ul class='p-4 ms-4'>
          <li><%= link_to 'アカウント登録', new_user_registration_path, class: "mb-2"%></li>
          <li><%= link_to 'ログイン', new_user_session_path, class: "mb-2"%></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
