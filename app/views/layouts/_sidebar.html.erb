<a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
  三
</a>

<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <h2 class="offcanvas-title text-center mx-auto" id="offcanvasExampleLabel">トイレナビ</h2>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="dropend">
      <button class="btn btn-secondary dropdown-toggle dropdown-toggle-split" aria-expanded="false" type="button" data-bs-toggle="dropdown">
        三
      </button>
      <ul class="dropdown-menu">
        <% if user_signed_in? %>
          <%= link_to 'トイレの場所登録', new_toilet_place_path, class: "dropdown-item"%>
          <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item"%>
        <% else %>
          <%= link_to 'アカウント登録', new_user_registration_path, class: "dropdown-item"%>
          <%= link_to 'ログイン', new_user_session_path, class: "dropdown-item"%>
        <% end %>
      </ul>
      <% toilet_places.each do |toilet_place| %>
        <div>
          <%= link_to toilet_place.name, toilet_place_path(toilet_place) %>
          <%= toilet_place.address %>
          <% if user_signed_in? && current_user.toilet_places.include?(toilet_place) %>
            <%= link_to '削除', toilet_place_path(toilet_place), data: { turbo_method: :delete, turbo_confirm: '本当に削除して良いですか？' } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>