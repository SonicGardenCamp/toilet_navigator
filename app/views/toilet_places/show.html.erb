<%= @toilet_place.name %>
<%= @toilet_place.address %>

<%= simple_form_for @review, url: toilet_place_reviews_path(@toilet_place)  do |f|%>
  <%= f.input :content %>
  <%= f.input :toilet_place_id, as: :hidden, input_html: { value: @toilet_place.id } %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>


<% @reviews.each do |review| %>
  <%= review.content %>
  <%  if current_user.reviews.include?(review) %>
    <%= link_to '編集', edit_toilet_place_review_path(review.toilet_place_id, review) %>
    <%= link_to '削除', toilet_place_review_path(review.toilet_place_id, review), data: { turbo_method: :delete, turbo_confirm: '本当に削除して良いですか？' }  %>
  <% end %>
<% end %>
