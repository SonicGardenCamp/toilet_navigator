<div class='w-50 m-auto mt-5'>
  <h2>パスワード変更</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
  
    <div class="field">
      <%= f.label :password, "新しいパスワード", class: 'form-label' %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認", class: 'form-label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
  
    <div class="actions">
      <%= f.submit "パスワード変更", class: 'btn btn-primary mt-2' %>
    </div>
  <% end %>
  
  <%= render "users/shared/links" %>
</div>